<h1><%= current_user.name %>さんのタスク一覧</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
    	<th scope="col">id</th>
      <th scope="col">Task</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
  	<% @tasks.each do |task| %>
	    <tr>
	    	<th><%= link_to task.id, task %></th>
	      <th scope="row"><%= task.content %></th>
	      <td><%= task.status %></td>
	    </tr>
	  <% end %>
  </tbody>
</table>

<%= link_to '新規タスクの投稿', new_task_path, class: 'btn btn-primary' %>