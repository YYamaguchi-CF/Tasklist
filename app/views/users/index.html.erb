<h1>ユーザー一覧</h1>
<% if @users.present? %>
	<table class="table table-hover">
		  <thead>
		    <tr>
		      <th scope="col">id</th>
		      <th scope="col">name</th>
		      <th scope="col">email</th>
		    </tr>
		  </thead>
		  <tbody>
		  		<% @users.each do |user| %>
				    <tr>
				      <th scope="row"><%= user.id %></th>
				      <td><%= link_to user.name, user_path(user) %></td>
				      <td><%= user.email %></td>
				    </tr>
				  <% end %>
			</tbody>
	</table>
<% end %>