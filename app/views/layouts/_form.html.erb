<%= form_with(model: task, local: true) do |f| %>
	<% if task.errors.present? %>
		<div id="error_explanation">
			<ul>
				<% task.errors.full_messages.each do |tsk| %>
					<li><%= tsk %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="form-group">
		<%= f.label :content, 'タスク' %>
		<%= f.text_field :content, class: 'form-control' %>
	</div>
	
	<div class="form-group">
		<%= f.label :status, 'ステータス' %>
		<%= f.text_field :status, class: 'form-control col-sm-4' %>
	</div>
	
	<%= f.submit '送信', class: 'btn btn-outline-secondary mb-4' %>
<% end %>