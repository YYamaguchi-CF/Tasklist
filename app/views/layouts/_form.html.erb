<%= form_with(model: task, local: true) do |f| %>
	<% if task.errors.present? %>
		<div id="error_explanation">
			<ul>
				<% task.errors.full_messages.each do |tsk| %>
					<li><%= tsk %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<%= f.label :content, 'タスク' %>
	<%= f.text_field :content %>
	
	<%= f.label :status, 'ステータス' %>
	<%= f.text_field :status %>
	
	<%= f.submit '送信' %>
<% end %>