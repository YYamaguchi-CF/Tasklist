<%= form_with(model: task, local: true) do |f| %>
	
	<%= render 'layouts/error_tasks', model: f.object %>
	
	<div class="form-group">
		<%= f.label :content, 'タスク' %>
		<%= f.text_field :content, class: 'form-control' %>
	</div>
	
	<div class="form-group">
		<%= f.label :status, 'ステータス' %>
		<%= f.text_field :status, class: 'form-control col-sm-4' %>
	</div>
	
	<%= f.submit '送信', class: 'btn btn-outline-secondary mb-4' %>
<% end %>